
.row
	.row
		.small-3.columns
			%p
		.small-6.columns.text-center
			%h1.bolder COMMAND CENTER
		.small-3.columns.text-right{:style => "padding-top: 1%"}
			%i.fi-mail.size-48
			%i.fi-wrench.size-48
			
	%hr.style-one.row
	.row
		.large-12.columns
			- flash.each do |type,message|
				.alert-box.success.round{:style => "margin-top: 2%"}
					=flash[message]
					=link_to raw('&times;'), '#', class: 'close'
					%span.flash= message

	#profile-header.row
		.small-3.columns.text-center
			=form_for current_user, url: destroy_session_path, method: 'post' do |f|
				=image_tag current_user.avatar(250)
			%i.fi-pencil.size-36
				%p Editar
			%i.fi-torso.size-36
				%p Perfil
		.small-9.columns
			=form_for current_user, url: destroy_session_path, method: 'post' do |f|
				%h3.bolder
					=current_user.username
				-if current_user.user_statuses.last.present?
					\"
					=current_user.user_statuses.last.status
					\"
			=form_for @status,  method: 'post' do |f|
				=f.text_area :status, :placeholder => "What's going on Biiiaaaattchhhh??!!"
				=f.submit 'Actualizar'
	.row
		.small-3.columns
			%nav#left-menu.top-bar{"data-topbar" => ""}
				%section.top-bar-section
					%ul.left
						%li
							%a{href: "#"} NOTIFICACIONES
						%li
							%a{"data-dropdown" => "drop-juegos", "data-options" => "align:right", href: "#"} MIS JUEGOS
							%ul#drop-juegos.medium.f-dropdown{"data-dropdown-content" => ""}
								%li
									=link_to '+ Agregar', newgame_path
								-unless @user_games.nil?
									-@user_games.uniq.each do |game|
										%li
											=link_to game.name
			
						%li
							%a{"data-dropdown" => "drop-equipos", "data-options" => "align:right", href: "#"} MIS EQUIPOS
							%ul#drop-equipos.medium.f-dropdown{"data-dropdown-content" => ""}
								%li
									=link_to '+ Crear Equipo', newteam_path
								-unless @user_teams.nil?
									-@user_teams.each do |team|
										%li
											=link_to team.game.name+" - "+team.name
						%li
							%a{href: "#"} REPORTES
		.small-9.columns
			.row#main
				.column.small-12.text-right.main-section
					.row.main-section-header
						%h2 CALENDARIO
						%i.fi-calendar.size-48
					%hr.style-one.row
					%p1 No tienes eventos ni partidos agendados
					-unless @eventos.nil?
						-@eventos.each do |evento|
							%p
								=evento.name
								=evento.game.name
								=evento.start.strftime("%d") #Dia
								=evento.start.strftime("%h") #Mes
								=evento.start.strftime("%H:%M") #Hora
								=evento.start.strftime("%Z") #Zona Horaria por defecto UTC

				.column.small-12
					.row.text-right.main-section
						.small-6.columns
							.row.main-section-header
								%h2 MIS TORNEOS
								%i.fi-trophy.size-48
							%hr.style-one.row
							%p1 No estas participando de ningún torneo
							-unless @user_torneos.nil?
								-@user_torneos.each do |torneo|
									%p
										=image_tag torneo.game.icon #agregar la imagen en manage
										=torneo.name
										=torneo.price
										
						.small-6.columns
							.row.main-section-header
								%h2 MIS 1V1
								%i.fi-skull.size-48
							%hr.style-one.row
							%p1 No tienes activo ningún desafío
							=#Considerado solo un tipo de torneo

				.column.small-12.text-right.main-section
					.row.main-section-header
						%h2 SUGERENCIAS
						%i.fi-bookmark.size-48
					%hr.style-one.row
					%p1 Comienza enlazando tus cuentas de videojuegos para comenzar a sugerirte torneos
					-unless @eventos.nil?
						-@eventos.each do |evento|
							%p
								=evento.name
								=evento.game.name
								=evento.start.strftime("%d")
								=evento.start.strftime("%h")
								=evento.start.strftime("%H:%M")
								=evento.start.strftime("%Z")
					

				.column.small-12.text-right.main-section
					.row.main-section-header
						%h2 BUSCA UN OPONENTE: CHAT
						%i.fi-target-two.size-48
					%hr.style-one.row
					%ul#chat
						= render @messages
					= form_for Message.new, remote: true do |f|
						= f.text_field :message
						= f.submit "Send"