
.row
	.column.small-12.text-center{:style => "margin-top: -2%; z-index: -2;"}
		.small-4.small-centered.columns.text-center
			.small-6.columns.text-right
				%i.fi-dollar-bill.size-100
			.small-6.columns.text-left{:style => "padding-top: 7%"}
				%h1 XX
				%p{:style => "margin-top: -20%"}
					%small Saldo Disponible
	.row
		.small-3.columns
			%p
		.small-6.columns.text-center
			%h1.bolder COMMAND CENTER
		.small-3.columns.text-right{:style => "padding-top: 1%"}
			%i.fi-mail.size-48
			%i.fi-wrench.size-48
			
	%hr.style-one.row

	#profile-header.row
		.small-2.columns.text-center
			=form_for current_user, url: destroy_session_path, method: 'post' do |f|
				.panel{:style => "width: 200%"}
					=image_tag current_user.avatar(250)
			%i.fi-pencil.size-36
				%p Editar
			%i.fi-torso.size-36
				%p Perfil
		.small-10.columns
			=form_for current_user, url: destroy_session_path, method: 'post' do |f|
				%h3.bolder
					=current_user.username
				-if current_user.user_statuses.last.present?
					\"
					=current_user.user_statuses.last.status
					\"
			=form_for @status,  method: 'post' do |f|
				=f.text_area :status
				=f.submit 'Actualizar'
	.row
		.small-3.columns
			%nav#left-menu.top-bar{"data-topbar" => ""}
				%section.top-bar-section
					%ul.left
						%li
							%a{href: "#"} NOTIFICACIONES
						%li.has-dropdown.not-click
							%a{href: "#"} MIS JUEGOS
							%ul.dropdown
								%li.title.back.js-generated
									%h5
										%a{href: "javascript:void(0)"} Back
								-unless @user_games.nil?
									-@user_games.uniq.each do |game|
										%li
											=link_to game.name

								
						%li.has-dropdown.not-click
							%a{href: "#"} MIS EQUIPOS
							%ul.dropdown
								%li.title.back.js-generated
									%h5
										%a{href: "javascript:void(0)"} Back
								-unless @user_teams.nil?
									-@user_teams.each do |team|
										%li
											=link_to team.game.name+" - "+team.name
						%li
							%a{href: "#"} REPORTES
		.small-9.columns
			.row
				.column.small-12.text-right
					%h1 CALENDARIO
					-unless @eventos.nil?
						-@eventos.each do |evento|
							%p
								=evento.name
								=evento.game.name
								=evento.start.strftime("%d") #Dia
								=evento.start.strftime("%h") #Mes
								=evento.start.strftime("%H:%M") #Hora
								=evento.start.strftime("%Z") #Zona Horaria por defecto UTC

				.column.small-12
					.row.text-right
						.small-6.columns
							%h1 MIS TORNEOS
							-unless @user_torneos.nil?
								-@user_torneos.each do |torneo|
									%p
										=image_tag torneo.game.icon #agregar la imagen en manage
										=torneo.name
										=torneo.price
										
						.small-6.columns
							%h1 MIS 1V1
							%p Blabla
							=#Considerado solo un tipo de torneo

				.column.small-12.text-right
					%h1 SUGERENCIAS
					-unless @eventos.nil?
						-@eventos.each do |evento|
							%p
								=evento.name
								=evento.game.name
								=evento.start.strftime("%d")
								=evento.start.strftime("%h")
								=evento.start.strftime("%H:%M")
								=evento.start.strftime("%Z")
					

				.column.small-12.text-right
					%h1 BUSCA UN OPONENTE: CHAT
					%ul#chat
						= render @messages
					= form_for Message.new, remote: true do |f|
						= f.text_field :message
						= f.submit "Send"
			.row
				.large-12.columns
					- flash.each do |type,message|
						%span.flash= message
					.row
						.columns.large-6
							%h1.subheader Account
							= simple_form_for @account do |f|
								= f.association :game
								= f.association :server
								= f.input :account_number
								= f.input :username
								= f.input :extra
								= f.button :submit
						.columns.large-6
							%h1.subheader Accounts list
							%ul
								- @user_accounts.each do |account|
									%li
										= account.game.name
										\- #{account.server.name} - #{account.username.capitalize}
				.row
					.columns.large-6
						%h1.subheader Team
						= simple_form_for @team do |f|
							= f.association :game
							= f.input :name
							= f.input :description
							= f.input :tag
							= f.button :submit
					.columns.large-6
						%h1.subheader Teams list
						%ul
							- @user_teams.each do |team|
								%li
									= team.game.name
									\- #{team.tag} - #{team.name.capitalize}
									%ul
										%li
											%span.subheader Members
											- team.team_members.order('role_id').each do |member|
												%li
													= member.user.username.capitalize
													= member.role.name
													