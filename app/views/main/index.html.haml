-lead 'COMMAND CENTER'
.row#main
	.column.small-12.text-right.main-section
		.row.main-section-header
			%h2 CALENDARIO
			%i.fi-calendar.size-48
		%hr.style-one.row
		%p1 No tienes eventos ni partidos agendados
		-unless @eventos.nil?
			-@eventos.each do |evento|
				%p
					=evento.name
					=evento.game.name
					=evento.start.strftime("%d") #Dia
					=evento.start.strftime("%h") #Mes
					=evento.start.strftime("%H:%M") #Hora
					=evento.start.strftime("%Z") #Zona Horaria por defecto UTC

	.column.small-12
		.row.text-right.main-section
			.small-6.columns
				.row.main-section-header
					%h2 MIS TORNEOS
					%i.fi-trophy.size-48
				%hr.style-one.row
				%p1 No estas participando de ningún torneo
				-unless @user_torneos.nil?
					-@user_torneos.each do |torneo|
						%p
							=image_tag torneo.game.icon #agregar la imagen en manage
							=torneo.name
							=torneo.price
							
			.small-6.columns
				.row.main-section-header
					%h2 MIS 1V1
					%i.fi-skull.size-48
				%hr.style-one.row
				%p1 No tienes activo ningún desafío
				=#Considerado solo un tipo de torneo

	.column.small-12.text-right.main-section
		.row.main-section-header
			%h2 SUGERENCIAS
			%i.fi-bookmark.size-48
		%hr.style-one.row
		%p1 Comienza enlazando tus cuentas de videojuegos para comenzar a sugerirte torneos
		-unless @eventos.nil?
			-@eventos.each do |evento|
				%p
					=evento.name
					=evento.game.name
					=evento.start.strftime("%d")
					=evento.start.strftime("%h")
					=evento.start.strftime("%H:%M")
					=evento.start.strftime("%Z")
		

	.column.small-12.text-right.main-section
		.row.main-section-header
			%h2 BUSCA UN OPONENTE: CHAT
			%i.fi-target-two.size-48
		%hr.style-one.row
		%ul#chat
			= render @messages
		= form_for Message.new, remote: true do |f|
			= f.text_field :message
			= f.submit "Send"